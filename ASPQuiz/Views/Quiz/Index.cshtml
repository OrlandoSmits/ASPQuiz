@model ASPQuiz.Models.QuizPagedListViewModel

@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css"/>

@{
    ViewBag.Title = "Quiz";
}
<div class="col-xs-12 col-sm-12 text-center">
    @Html.PagedListPager(Model.PagedList, page => Url.Action("Index",
        new {page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter}))
</div>

<h4>Quiz</h4>
<div class="col-sm-9 col-xs-9">
    @{
        int Counter = 0;  ;}
    @if (Model.PagedList.IsLastPage)
    {
        Counter = Counter + 3;
    }
 
        
    @foreach (var item in Model.PagedList)
    {
        Counter += 1;
        <div class="card col-sm-12 col-xs-12">
            <div class="card-block">
                <h4 class="card-title">Vraag @Counter van @Model.PagedList.TotalItemCount</h4>
                <p class="card-text">@item.QuestionText</p>
            </div>
            <ul class="list-group list-group-flush">

                @using (Html.BeginForm("AddToQuiz", "Quiz"))
                {
                    @Html.Hidden("questionId", item.Id)
                    @Html.Hidden("answerId", item.Answer1.Id)
                    @Html.Hidden("returnUrl", Request.Url)
                    <li class="list-group-item">
                        @item.Answer1.AnswerText
                    </li>
                    <li style="list-style-type: none">
                        <input type="submit" data-inline="true" class="btn btn-success" data-mini="true" value="Kies dit antwoord"/>
                    </li>
                }

                @using (Html.BeginForm("AddToQuiz", "Quiz"))
                {
                    @Html.Hidden("questionId", item.Id)
                    @Html.Hidden("answerId", item.Answer2.Id)
                    @Html.Hidden("returnUrl", Request.Url)
                    <li class="list-group-item">
                        @item.Answer2.AnswerText
                    </li>
                    <li style="list-style-type: none">
                        <input type="submit" class="btn btn-success" data-inline="true" data-mini="true" value="Kies dit antwoord"/>
                    </li>
                }

                @using (Html.BeginForm("AddToQuiz", "Quiz"))
                {
                    @Html.Hidden("questionId", item.Id)
                    @Html.Hidden("answerId", item.CorrectAnswer.Id)
                    @Html.Hidden("returnUrl", Request.Url)
                    <li class="list-group-item">
                        @item.CorrectAnswer.AnswerText
                    </li>
                    <li style="list-style-type: none">
                        <input type="submit" class="btn btn-success" data-inline="true" data-mini="true" value="Kies dit antwoord"/>
                    </li>
                }
            </ul>
        </div>
    }
</div>
<div class="col-sm-3 col-xs-3">
    <ul class="list-group list-group-flush">
        @foreach (var listitem in @Model.Quiz.Lines)
        {
            using (Html.BeginForm("RemoveFromQuiz", "Quiz"))
            {
                @Html.Hidden("questionId", listitem.Question.Id)
                @Html.Hidden("answerId", listitem.Answer.Id)
                @Html.Hidden("returnUrl", Request.Url)
                <li class="list-group-item">@listitem.Question.QuestionText - @listitem.Answer.AnswerText</li>
                <li style="list-style-type: none">
                    <input type="submit" class="btn btn-danger" data-inline="true" data-mini="true" value="Verwijder"/>
                </li>
                <br/>
            }
        }

        @if (Model.Quiz.Lines.Count() == 5)
        {
            @Html.ActionLink("Lever de resultaten in", "quizView", "Quiz", new {area = ""}, new {@class = "btn btn-default"})
        }
    </ul>
</div>